<form method="post" action="/vote">
  <input name="question_id" type="hidden" value="<%= @question.id %>">
  <input name="user_id" type="hidden" value="<%= current_user.id %>">
  <div class="vote_box center-align">
    <button id="item1_vote" class="vote_btn" name="vote" type="submit" value="<%= @question.item1.id %>">
      <div class="vote_item left_item indigo darken-2">
        <h1 class="item_score vote_item1 hide"><%= ((@question.item1_votes + 1).to_f / (@question.total_votes + 1) * 100).to_i.to_s + "%" %></h1>
        <h1 class="item_score vote_item2 hide"><%= ((@question.item1_votes).to_f / (@question.total_votes + 1) * 100).to_i.to_s + "%" %></h1>
        <img onclick="Materialize.toast('Voted for <%= @question.item1.name.capitalize %>!', 1000, 'rounded indigo darken-4')" src="<%= @question.item1.url %>">
        <h4 class="item_name"><%= @question.item1.name.capitalize %></h4>
      </div>
    </button>
      <div class="vote_or"><h3>OR</h3></div>
    <button id="item2_vote" class="vote_btn" name="vote" type="submit" value="<%= @question.item2.id %>">
      <div class="vote_item right_item indigo darken-2">
        <h1 class="item_score vote_item1 hide"><%= ((@question.item2_votes).to_f / (@question.total_votes + 1) * 100).to_i.to_s + "%" %></h1>
        <h1 class="item_score vote_item2 hide"><%= ((@question.item2_votes + 1).to_f / (@question.total_votes + 1) * 100).to_i.to_s + "%" %></h1>
        <img onclick="Materialize.toast('Voted for <%= @question.item2.name.capitalize %>!', 1000, 'rounded indigo darken-4')" src="<%= @question.item2.url %>">
        <h4 class="item_name"><%= @question.item2.name.capitalize %></h4>
      </div>
    </button>
  </div>
  <div class="row">
      <div class="input-field col s8 offset-s2">
        <input type="text" name="comment_text" placeholder="Enter comment here before voting...">
      </div>
  </div>
</form>
