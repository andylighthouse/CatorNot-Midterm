<% @questions.each do |question| %>

  <div class="results">
    <div class="row">
      <div class="col s8 result_item offset-s2">

        <div class="row indigo darken-4 date_div">
          <div class="col s12">
            <div class="date">
              <a href = '/comments/<%= question.id %>'><i class="material-icons left white-text">message</i></a>
              <p class="right-align">Posted On: <%= question.created_at.strftime("%A %d, %Y at %I:%M %p") %></p>
            </div>
          </div>
        </div>

        <div class="row">

            <!-- LEFT SIDE -->
            <div class = "col s5 img1 center-align">
              <img class="valign" src=<%= question.item1.url %>><br>
              <div class="vote_count"><b><%= question.item1_votes %></b></div>
              <i class="material-icons white-text thumb">thumb_up</i>
            </div>

            <!-- MIDDLE -->
            <div class="col s2 result_or center-align">
              <h4>OR</h4>
            </div>

            <!-- RIGHT SIDE -->
            <div class = "col s5 img2 center-align">
              <img class="valign" src=<%= question.item2.url %>><br>
              <div class="vote_count"><b><%= question.item2_votes %></b></div>
              <i class="material-icons white-text thumb_right">thumb_up</i>
              <form method="post" action="/results/<%= question.id %>">
                <input type="hidden" name="_method" value="DELETE" />
                <button class="btn-floating btn-small indigo darken-2 right delete"><i class="material-icons red-text">delete</i></button>
              </form>
            </div>

        </div><!-- /.row -->
      </div>
    </div>
  </div>
<%end%>

